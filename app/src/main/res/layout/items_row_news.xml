<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="6dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardElevation="4dp"
    android:clickable="true"
    android:layout_marginTop="15dp"
    android:padding="5dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"


    >


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/relative_parent"
   >

    <ImageView
    android:id="@+id/img_news"
    android:layout_width="66dp"
    android:layout_height="52dp"
    android:layout_alignParentStart="true"
    android:layout_marginTop="9.6dp"
    android:layout_marginStart="15.5dp"
    android:layout_marginBottom="9.5dp"
    android:src="@drawable/ic_launcher_background"
    android:scaleType="fitXY"
    />


    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_toEndOf="@id/img_news"
    android:orientation="vertical">

    <TextView
    android:id="@+id/txt_news"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="22.8dp"
    android:layout_marginEnd="37dp"
    android:layout_marginTop="15dp"
    android:textAlignment="viewStart"
    android:textSize="10.1sp"
    android:textColor="@color/cardview_dark_background"/>


    <TextView
    android:id="@+id/txt_date"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textAlignment="viewStart"
    android:layout_marginStart="24.8dp"
    android:layout_marginTop="5.3dp"
    android:layout_marginBottom="21.8dp"
    android:textSize="10.6sp"
    android:textColor="@color/cardview_dark_background"/>


    </LinearLayout>
    </RelativeLayout>


</android.support.v7.widget.CardView>
